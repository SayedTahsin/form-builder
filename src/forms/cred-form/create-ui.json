{
  "type": "single-step-from",
  "label": "Credential Create From",
  "schema": "schema/",
  "elements": [
    {
      "type": "select",
      "label": "Credential Type",
      "schema": "schema/properties/type",
      "validation": { "type": "required" }
    },
    {
      "type": "input",
      "label": "Credential Name",
      "schema": "schema/properties/name",
      "validation": { "type": "required" }
    },
    {
      "type": "input",
      "label": "Owner ID",
      "schema": "schema/properties/ownerID"
    },
    {
      "type": "block-layout",
      "label": "Aws Block Label",
      "showLabels": true,
      "if": {
        "type": "function",
        "name": "isCredAws|a|b|c|d|e"
      },
      "elements": [
        {
          "type": "input",
          "schema": "schema/properties/aws/properties/accessKeyID",
          "label": "Access Key Id"
        },
        {
          "type": "block-layout",
          "label": "Test block",
          "showLabels": true,
          "elements": [
            {
              "type": "input",
              "label": "Secret Access Key",
              "schema": "schema/properties/aws/properties/secretAccessKey",
              "validation": { "type": "required" }
            }
          ]
        }
      ]
    },
    {
      "type": "block-layout",
      "label": "Azure Block",
      "showLabels": true,
      "if": {
        "type": "computed",
        "name": "isCredAzure"
      },
      "elements": [
        {
          "type": "input",
          "label": "Subscription Id",
          "schema": "schema/properties/azure/properties/subscriptionID"
        },
        {
          "type": "input",
          "label": "Tenant ID",
          "schema": "schema/properties/azure/properties/tenantID"
        },
        {
          "type": "horizontal-layout",
          "label": "horizontal test",
          "elements": [
            {
              "type": "input",
              "label": "Client Id",
              "schema": "schema/properties/azure/properties/clientID"
            },
            {
              "type": "input",
              "label": "Client Secret",
              "schema": "schema/properties/azure/properties/clientSecret"
            }
          ]
        }
      ]
    }
  ]
}
